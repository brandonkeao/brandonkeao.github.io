---
import BaseLayout from '../layouts/BaseLayout.astro';

const pathways = [
  {
    title: "I'm a builder exploring AI",
    description: "Learn from my journey building agentic systems and context engineering approaches.",
    icon: "code",
    actions: [
      { label: "Read my writing", href: "/writing", primary: true },
      { label: "Follow on LinkedIn", href: "https://linkedin.com/in/brandonkeao", external: true }
    ]
  },
  {
    title: "I'm exploring AI for my company",
    description: "Get practical, evidence-based guidance on AI strategy and implementation.",
    icon: "building",
    actions: [
      { label: "View services", href: "/services", primary: true },
      { label: "Schedule a call", href: "mailto:brandon.keao@gmail.com?subject=AI%20Strategy%20Inquiry", primary: false }
    ]
  },
  {
    title: "I'm a potential collaborator",
    description: "Let's discuss partnerships, speaking opportunities, or joint projects.",
    icon: "handshake",
    actions: [
      { label: "Email me", href: "mailto:brandon.keao@gmail.com?subject=Collaboration%20Opportunity", primary: true }
    ]
  },
  {
    title: "I'm hiring",
    description: "Review my experience and leadership philosophy.",
    icon: "briefcase",
    actions: [
      { label: "View my profile", href: "https://linkedin.com/in/brandonkeao", external: true, primary: true },
      { label: "Read Manager README", href: "/manager-readme" }
    ]
  }
];

const icons = {
  code: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />`,
  building: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`,
  handshake: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
  briefcase: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`
};
---

<BaseLayout title="Contact" description="Get in touch with Brandon Keao for AI strategy consulting, product leadership, or collaboration opportunities.">

  <!-- Hero -->
  <section class="section">
    <div class="container">
      <div class="max-w-2xl reveal">
        <h1 class="mb-6">Get in Touch</h1>
        <p class="lead">
          Whether you're exploring AI strategy, need product leadership, or want to discuss context engineering&mdash;I'd love to hear from you.
        </p>
      </div>
    </div>
  </section>

  <!-- Pathways -->
  <section class="section-alt section">
    <div class="container">
      <h2 class="mb-8">How can I help?</h2>
      <div class="grid md:grid-cols-2 gap-6 reveal-stagger">
        {pathways.map(pathway => (
          <article class="card h-full flex flex-col">
            <div class="flex flex-col gap-4 flex-1">
              <div class="flex items-start gap-4">
                <div class="p-2 rounded-lg bg-[var(--accent-subtle)]">
                  <svg class="w-6 h-6 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <Fragment set:html={icons[pathway.icon as keyof typeof icons]} />
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-lg">{pathway.title}</h3>
                  <p class="text-[var(--text-secondary)] mt-1">{pathway.description}</p>
                </div>
              </div>
              <div class="flex flex-wrap gap-3 mt-auto pt-4">
                {pathway.actions.map(action => (
                  <a
                    href={action.href}
                    class={action.primary ? "btn btn-primary btn-sm" : "btn btn-secondary btn-sm"}
                    target={action.external ? "_blank" : undefined}
                    rel={action.external ? "noopener noreferrer" : undefined}
                  >
                    {action.label}
                    {action.external && (
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    )}
                  </a>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Direct Contact -->
  <section class="section">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center reveal">
        <h2 class="mb-6">Direct Contact</h2>
        <p class="lead mb-8">
          Prefer to reach out directly? Here's how to find me.
        </p>

        <div class="grid sm:grid-cols-3 gap-6">
          <!-- Email -->
          <a
            href="mailto:brandon.keao@gmail.com"
            class="card text-center group"
          >
            <div class="flex flex-col items-center gap-3">
              <div class="p-3 rounded-full bg-[var(--bg-secondary)] group-hover:bg-[var(--accent-subtle)] transition-colors">
                <svg class="w-6 h-6 text-[var(--text-secondary)] group-hover:text-[var(--accent)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-medium">Email</h3>
                <p class="text-sm text-[var(--text-tertiary)]">brandon.keao@gmail.com</p>
              </div>
            </div>
          </a>

          <!-- LinkedIn -->
          <a
            href="https://linkedin.com/in/brandonkeao"
            target="_blank"
            rel="noopener noreferrer"
            class="card text-center group"
          >
            <div class="flex flex-col items-center gap-3">
              <div class="p-3 rounded-full bg-[var(--bg-secondary)] group-hover:bg-[var(--accent-subtle)] transition-colors">
                <svg class="w-6 h-6 text-[var(--text-secondary)] group-hover:text-[var(--accent)] transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-medium">LinkedIn</h3>
                <p class="text-sm text-[var(--text-tertiary)]">Connect with me</p>
              </div>
            </div>
          </a>

          <!-- Twitter -->
          <a
            href="https://twitter.com/brandonkeao"
            target="_blank"
            rel="noopener noreferrer"
            class="card text-center group"
          >
            <div class="flex flex-col items-center gap-3">
              <div class="p-3 rounded-full bg-[var(--bg-secondary)] group-hover:bg-[var(--accent-subtle)] transition-colors">
                <svg class="w-6 h-6 text-[var(--text-secondary)] group-hover:text-[var(--accent)] transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-medium">Twitter / X</h3>
                <p class="text-sm text-[var(--text-tertiary)]">@brandonkeao</p>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Response Expectations -->
  <section class="section-alt section">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center reveal">
        <h2 class="mb-6">What to Expect</h2>
        <div class="prose mx-auto">
          <p>
            I read every message and aim to respond within 2-3 business days.
            For consulting inquiries, I typically schedule an initial 30-minute call to understand your needs.
          </p>
          <p>
            The best conversations start with context&mdash;tell me about your situation, what you're trying to accomplish, and how you think I might help.
          </p>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
