---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/content/ProjectCard.astro';

const projects = [
  {
    title: 'Jane - AI Chief of Staff',
    description: 'An agentic AI system that manages context, coordinates agents, and handles the cognitive load of running a business. Jane is my laboratory for context engineering principles&mdash;a real system solving real problems.',
    status: 'active' as const,
    tags: ['Context Engineering', 'Agentic AI', 'Claude Code'],
    featured: true,
    details: [
      'Multi-agent coordination with specialized roles',
      'Context Maps for structured information architecture',
      'Session memory and cross-session learning',
      'Integration with professional workflows'
    ]
  },
  {
    title: 'Agentic OS',
    description: 'A framework for building and orchestrating AI agent systems. The operating system layer that makes multi-agent coordination possible.',
    status: 'active' as const,
    tags: ['Framework', 'Agent Orchestration', 'System Design'],
    details: [
      'Agent lifecycle management',
      'Context routing and optimization',
      'Session state persistence',
      'Modular architecture'
    ]
  },
  {
    title: 'Context Maps',
    description: 'A methodology and toolset for structuring information architecture for AI systems. Making context engineering practical and repeatable.',
    status: 'active' as const,
    tags: ['Methodology', 'Context Engineering'],
    details: [
      'Profile-based context structures',
      'Dynamic context loading',
      'Cross-reference linking',
      'Version control integration'
    ]
  }
];

const pastWork = [
  {
    title: 'Rebrandly - CPO',
    description: 'Leading product strategy and AI integration at Rebrandly, shaping how the platform leverages AI for link management and brand building at scale.',
    status: 'active' as const,
    tags: ['Product Leadership', 'AI Strategy', 'SaaS']
  },
  {
    title: 'Bitly Product Redesign',
    description: 'Led a complete redesign of the Bitly core offering, resulting in 75% increase in SaaS revenues. Transformed the product from a simple URL shortener to a comprehensive link management platform.',
    status: 'completed' as const,
    tags: ['Product Strategy', 'SaaS', 'Growth']
  }
];
---

<BaseLayout title="Projects" description="Projects and work by Brandon Keao - context engineering, agentic AI systems, and product leadership.">

  <!-- Hero -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl reveal">
        <h1 class="mb-6">Projects</h1>
        <p class="lead">
          I build systems that bridge human judgment and AI capability. Here's what I'm working on and what I've built.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Project: Jane -->
  <section class="section-alt section">
    <div class="container">
      <div class="reveal">
        <span class="tag mb-4 inline-block">Featured</span>
        <h2 class="mb-4">Jane - AI Chief of Staff</h2>
        <div class="grid lg:grid-cols-2 gap-8">
          <div class="prose">
            <p>
              Jane is an agentic AI system designed to handle the cognitive load of running a business.
              She manages context, coordinates specialized agents, and maintains continuity across sessions.
            </p>
            <p>
              More than a chatbot or assistant, Jane represents a new paradigm: AI that understands
              the <em>context</em> of your work, not just the content. She's my laboratory for
              proving that context engineering&mdash;not prompt engineering&mdash;is the key to
              useful AI systems.
            </p>
            <p class="text-[var(--text-secondary)]">
              <strong class="text-[var(--text-primary)]">Built with:</strong> Claude Code, TypeScript,
              custom context architecture, session persistence, multi-agent coordination.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Key Capabilities</h3>
            <ul class="space-y-3">
              {projects[0].details?.map(detail => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-[var(--accent)] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-[var(--text-secondary)]">{detail}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Active Projects -->
  <section class="section">
    <div class="container">
      <h2 class="mb-8">Active Projects</h2>
      <div class="grid md:grid-cols-2 gap-6 reveal-stagger">
        {projects.slice(1).map(project => (
          <article class="card">
            <div class="flex flex-col gap-4">
              <div class="flex items-start justify-between">
                <h3 class="text-lg font-semibold">{project.title}</h3>
                <span class="text-xs font-medium text-green-600 dark:text-green-400">Active</span>
              </div>
              <p class="text-[var(--text-secondary)]">{project.description}</p>
              {project.details && (
                <ul class="space-y-2">
                  {project.details.map(detail => (
                    <li class="flex items-start gap-2 text-sm text-[var(--text-tertiary)]">
                      <span class="text-[var(--accent)]">-</span>
                      {detail}
                    </li>
                  ))}
                </ul>
              )}
              <div class="flex flex-wrap gap-2 mt-auto">
                {project.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Past Work -->
  <section class="section-alt section">
    <div class="container">
      <h2 class="mb-8">Professional Work</h2>
      <div class="grid md:grid-cols-2 gap-6 reveal-stagger">
        {pastWork.map(work => (
          <ProjectCard {...work} />
        ))}
      </div>
    </div>
  </section>

  <!-- Building in Public -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl reveal">
        <h2 class="mb-6">Building in Public</h2>
        <div class="prose">
          <p>
            I share my journey building these systems through writing and LinkedIn posts.
            The best insights come from building real things&mdash;including the mistakes.
          </p>
          <p>
            If you're interested in context engineering, agentic systems, or the future of
            AI-augmented work, follow along.
          </p>
        </div>
        <div class="flex flex-wrap gap-4 mt-8">
          <a href="/writing" class="btn btn-primary">Read my writing</a>
          <a
            href="https://www.linkedin.com/in/brandonkeao/"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary"
          >
            Follow on LinkedIn
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
