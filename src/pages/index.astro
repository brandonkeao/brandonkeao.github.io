---
import BaseLayout from '../layouts/BaseLayout.astro';
import Testimonial from '../components/content/Testimonial.astro';
import ProjectCard from '../components/content/ProjectCard.astro';
import ServiceCard from '../components/content/ServiceCard.astro';

const featuredProjects = [
  {
    title: 'Jane - AI Chief of Staff',
    description: 'An agentic AI system that manages context, coordinates agents, and handles the cognitive load of running a business. My laboratory for context engineering principles.',
    status: 'active' as const,
    href: '/projects',
    tags: ['Context Engineering', 'Agentic AI'],
    featured: true
  },
  {
    title: 'Rebrandly - Head of Product',
    description: 'Leading product strategy and AI integration at Rebrandly, shaping how the platform uses AI for link management and brand building.',
    status: 'active' as const,
    tags: ['Product Leadership', 'AI Strategy']
  }
];

const services = [
  {
    title: 'AI Strategy Collaboration',
    description: "I'm still learning what works and what doesn't. If you're building agentic systems, let's compare notes and figure it out together.",
    features: ['Current state analysis', 'Opportunity mapping', 'Implementation roadmap']
  },
  {
    title: 'AI Coaching for Product Teams',
    description: 'Help your team understand how AI really works and how to apply it to modern product work.',
    features: ['Context Maps', 'Agent coordination', 'System design']
  },
  {
    title: 'Fractional Product Leadership',
    description: 'Product leadership for companies scaling growth, now enhanced with AI capabilities.',
    features: ['Strategy development', 'Team coaching', 'Process optimization']
  }
];

// Curated to 3 strong testimonials for editorial impact
const testimonials = [
  {
    quote: "Brandon is a top-notch full-stack product leader who is highly capable and willing to be accountable for vast product areas.",
    author: "Maria Thomas",
    title: "VP of Product",
    company: "Bitly"
  },
  {
    quote: "His ability to break down business objectives into actionable technical requirements impressed me most.",
    author: "Andre Sugai",
    title: "CTO and Partner",
    company: "Ora Interactive"
  },
  {
    quote: "Brandon has an honest and thoughtful communication style, a keen eye for the customer journey.",
    author: "Walter Reid",
    title: "Senior Product Manager",
    company: "ShowYourWay Rewards"
  }
];

---

<BaseLayout title="Home" description="Brandon Keao - Product Leader & AI Builder. 18+ years building products and teams. Now pioneering practical context engineering.">

  <!-- Hero Section - Editorial -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="max-w-4xl reveal">
        <p class="eyebrow mb-6">Builder / Product Manager / AI Engineer</p>
        <h1 class="mb-8 text-balance leading-none">
          Leadership through building.<br class="hidden md:block" />
          Products, teams, AI systems.
        </h1>
        <p class="lead mb-12 max-w-2xl">
          Head of Product at Rebrandly. Building AI agent systems in public. 18+ years leading teams and shipping products that work. Now focused on helping people understand how AI really works, and rethinking how we do modern work, at Rebrandly and beyond.
        </p>
        <div class="flex flex-wrap items-center gap-6">
          <a href="/contact" class="btn btn-primary">Start a Conversation</a>
          <a href="/writing" class="text-sm font-medium text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors">
            Read my writing &rarr;
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- REMOVE THIS SECTION - Per Brandon's feedback 2026-01-05 -->

  <!-- Featured Work -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="flex items-baseline justify-between mb-10">
        <h2>Current Attention</h2>
        <a href="/projects" class="text-sm font-medium text-[var(--text-tertiary)] hover:text-[var(--accent)] transition-colors">
          View all &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-2 gap-8 reveal-stagger">
        {featuredProjects.map(project => (
          <ProjectCard {...project} />
        ))}
      </div>
    </div>
  </section>


  <!-- Services Preview -->
  <section class="py-16 md:py-24 bg-[var(--bg-secondary)]">
    <div class="container">
      <div class="flex items-baseline justify-between mb-10">
        <h2>How I Can Help</h2>
        <a href="/services" class="text-sm font-medium text-[var(--text-tertiary)] hover:text-[var(--accent)] transition-colors">
          View all &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-3 gap-8 reveal-stagger">
        {services.map(service => (
          <ServiceCard {...service} />
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 md:py-24">
    <div class="container">
      <p class="eyebrow mb-3">What People Say</p>
      <h2 class="mb-12">A few perspectives from people who've seen the work firsthand.</h2>
      <div class="grid md:grid-cols-3 gap-12 reveal-stagger">
        {testimonials.map(t => (
          <Testimonial {...t} />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-[var(--bg-secondary)]">
    <div class="container">
      <div class="max-w-2xl reveal">
        <h2 class="mb-6">Let's Talk</h2>
        <p class="lead mb-10 max-w-xl">
          Whether you're exploring AI strategy in product leadership or want to discuss context engineering, I'd love to hear from you.
        </p>
        <a href="/contact" class="btn btn-primary">Start a Conversation</a>
      </div>
    </div>
  </section>

</BaseLayout>
