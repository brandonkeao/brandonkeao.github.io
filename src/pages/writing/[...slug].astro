---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('writing');
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="container py-16">
    <div class="max-w-3xl">
      <a href="/writing" class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] mb-8 inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Writing
      </a>

      <header class="mb-12">
        <time class="text-sm text-[var(--color-text-muted)]" datetime={post.data.date.toISOString()}>
          {formatDate(post.data.date)}
        </time>
        <h1 class="mt-2">{post.data.title}</h1>
        {post.data.tags && (
          <div class="flex gap-2 mt-4">
            {post.data.tags.map((tag: string) => (
              <span class="text-xs px-2 py-1 bg-gray-100 rounded text-[var(--color-text-muted)]">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <div class="prose">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>
