---

<BaseLayout title="Bookshelf" description="Books that have shaped Brandon Keao's thinking on product, strategy, leadership, and decision-making.">
  <section class="container py-16">
    <div class="max-w-4xl">
      <h1 class="mb-4">Bookshelf</h1>
      <p class="text-xl text-[var(--color-text-muted)] mb-12">
        Books that have shaped my thinking. Not exhaustive&mdash;just the ones I find myself recommending.
      </p>

      <div class="space-y-12">
        {categories.map(category => (
          <div>
            <h2 class="text-lg font-semibold mb-6 pb-2 border-b border-[var(--color-border)]">
              {category.name}
            </h2>
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
              {category.books.map(book => (
                <div class="p-4 bg-gray-50 rounded-lg">
                  <h3 class="font-medium text-sm">{book.title}</h3>
                  <p class="text-sm text-[var(--color-text-muted)]">
                    {book.author}
                  </p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
