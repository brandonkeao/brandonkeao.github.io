---
interface Props {
  quote: string;
  author: string;
  title?: string;
  company?: string;
}

const { quote, author, title, company } = Astro.props;
---

<blockquote class="border-l-4 border-[var(--accent)] pl-6 py-2">
  <p class="font-[var(--font-serif)] text-xl italic leading-relaxed text-[var(--text-secondary)] mb-4">
    "{quote}"
  </p>

  <footer>
    <cite class="not-italic">
      <span class="font-semibold text-[var(--text-primary)]">{author}</span>
      {(title || company) && (
        <span class="text-sm text-[var(--text-tertiary)]">
          {' '}/{' '}{title}{title && company && ', '}{company}
        </span>
      )}
    </cite>
  </footer>
</blockquote>
