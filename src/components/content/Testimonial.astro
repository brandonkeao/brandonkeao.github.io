---
interface Props {
  quote: string;
  author: string;
  title?: string;
  company?: string;
}

const { quote, author, title, company } = Astro.props;
---

<blockquote class="card">
  <div class="flex flex-col gap-4">
    <svg
      class="w-8 h-8 text-[var(--accent)] opacity-50"
      fill="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>

    <p class="text-[var(--text-secondary)] italic leading-relaxed">
      "{quote}"
    </p>

    <footer class="mt-2">
      <cite class="not-italic">
        <span class="font-semibold text-[var(--text-primary)]">{author}</span>
        {(title || company) && (
          <span class="block text-sm text-[var(--text-tertiary)] mt-0.5">
            {title}{title && company && ', '}{company}
          </span>
        )}
      </cite>
    </footer>
  </div>
</blockquote>
