---
const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/writing', label: 'Writing' },
  { href: '/bookshelf', label: 'Bookshelf' },
  { href: '/manager-readme', label: 'Manager README' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-[var(--border)]">
  <nav class="container py-2 flex items-center justify-between">
    <!-- Logo/Brand - Editorial: Display font, larger -->
    <a
      href="/"
      class="text-2xl text-[var(--text-primary)] hover:text-[var(--text-primary)] font-[var(--font-display)] tracking-tight"
    >
      Brandon Keao
    </a>

    <!-- Desktop Nav - Editorial: Uppercase, tracked -->
    <div class="hidden md:flex items-center">
      <ul class="flex items-center gap-10">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                "text-xs font-medium uppercase tracking-widest transition-colors",
                currentPath === link.href || currentPath.startsWith(link.href + '/')
                  ? "text-[var(--text-primary)]"
                  : "text-[var(--text-tertiary)] hover:text-[var(--text-primary)]"
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Mobile Controls -->
    <div class="flex items-center md:hidden">
      <button
        id="mobile-menu-btn"
        class="p-2 -mr-2 hover:bg-[var(--bg-secondary)] rounded-md transition-colors"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6 text-[var(--text-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            id="menu-icon"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Nav - Editorial style -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-[var(--border)] bg-[var(--bg-primary)]">
    <ul class="container py-6 flex flex-col gap-1">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              "block py-3 text-sm font-medium uppercase tracking-widest transition-colors",
              currentPath === link.href || currentPath.startsWith(link.href + '/')
                ? "text-[var(--text-primary)]"
                : "text-[var(--text-tertiary)] hover:text-[var(--text-primary)]"
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  function initMobileMenu() {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const icon = document.getElementById('menu-icon');

    btn?.addEventListener('click', () => {
      const isHidden = menu?.classList.toggle('hidden');
      btn.setAttribute('aria-expanded', String(!isHidden));

      if (isHidden) {
        icon?.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
      } else {
        icon?.setAttribute('d', 'M6 18L18 6M6 6l12 12');
      }
    });
  }

  // Initialize on page load
  initMobileMenu();

  // Re-initialize after view transitions
  document.addEventListener('astro:after-swap', initMobileMenu);
</script>
