---
const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/writing', label: 'Writing' },
  { href: '/bookshelf', label: 'Bookshelf' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-[var(--color-border)]">
  <nav class="container py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-semibold text-[var(--color-text)] hover:text-[var(--color-text)]">
      Brandon Keao
    </a>

    <!-- Desktop Nav -->
    <ul class="hidden md:flex items-center gap-8">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              "text-sm font-medium transition-colors",
              currentPath === link.href || currentPath.startsWith(link.href + '/')
                ? "text-[var(--color-accent)]"
                : "text-[var(--color-text-muted)] hover:text-[var(--color-text)]"
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 -mr-2"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          id="menu-icon"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
    </button>
  </nav>

  <!-- Mobile Nav -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-[var(--color-border)]">
    <ul class="container py-4 flex flex-col gap-4">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              "block py-2 text-base font-medium",
              currentPath === link.href || currentPath.startsWith(link.href + '/')
                ? "text-[var(--color-accent)]"
                : "text-[var(--color-text-muted)]"
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const icon = document.getElementById('menu-icon');

  btn?.addEventListener('click', () => {
    const isOpen = menu?.classList.toggle('hidden');
    btn.setAttribute('aria-expanded', String(!isOpen));

    if (isOpen) {
      icon?.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
    } else {
      icon?.setAttribute('d', 'M6 18L18 6M6 6l12 12');
    }
  });
</script>
